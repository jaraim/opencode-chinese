name: daily-pr-recap
on:
  schedule:
    - cron: '0 9 * * *'  # 每天早上9点
  workflow_dispatch:

jobs:
  recap:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
    - name: Generate PR recap
      uses: peter-evans/create-issue-from-file@v4
      with:
        title: Daily PR Recap - ${{ github.event.schedule }}
        content-path: ./pr-recap.md
        labels: recap,daily